esac
}

adminbot(){
clear
#msg -bar
#msg -tit
echo ""
echo -e "\e[1;90m╔─━━━━━━━━━━━━━━░★░━━━━━━━━━━━━━━─╗                \e[0m"
msg -ama " ░ ADMINISTRATOR BOT | TELEGRAM ░                   \033[1;31m"
echo -e "\e[1;90m╚─━━━━━━━━━━━━━━░★░━━━━━━━━━━━━━━─╝                \e[0m"
activar(){
msg -bar
echo -ne "\033[1;96m #Digitize the BOT Token\033[0;92m\nTOKEN: \033[0;97m" && read TOKEN
msg -bar
echo -ne "\033[1;96m #Enter a name for your User\033[0;92m \nUSER: \033[0;97m" && read USERLIB
msg -bar
echo -ne "\033[1;96m #Enter a password for your User\033[0;92m \nPASSWORD: \033[0;97m" && read PASSLIB
#msg -bar
echo -e "[Unit]
Description=ADMbot.sh Service by @lacasitamx
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
User=root
WorkingDirectory=/root
ExecStart=/bin/bash /etc/VPS-MX/herramientas/ADMbot.sh id "$TOKEN" "$USERLIB" "$PASSLIB"
Restart=always
RestartSec=3s

[Install]
WantedBy=multi-user.target" > /etc/systemd/system/Botca.service

    systemctl enable Botca &>/dev/null
    systemctl start Botca &>/dev/null
msg -bar
echo -e "\033[1;92m                BOT STARTED SUCCESSFULLY"
echo -e "\033[1;97m BOT START MODE: /ADMIN $USERLIB $PASSLIB"
msg -bar
}

killbot(){
	systemctl stop Botca &>/dev/null
    systemctl disable Botca  &>/dev/null
    rm /etc/systemd/system/Botca.service &>/dev/null
    msg -bar
    echo -e "\033[1;91m               BOT DETECTED"
msg -bar

}
echo -e " \e[1;93m[\e[92m1\e[93m] $(msg -verm2 "➛ ")$(msg -verd "  START BOT MANAGER   ")"
echo -e " \e[1;93m[\e[92m2\e[93m] $(msg -verm2 "➛ ")$(msg -verm2 " STOP BOT MANAGER   ")"
echo -e " \e[1;93m[\e[92m0\e[93m] $(msg -verm2 "➛ ")$(msg -bra "  RETURN   ")"
msg -bar
echo -ne " ►\e[1;37m Select an option: \e[33m " && read select
case $select in
0)menu3 ;;
1)activar && msg -ne "Enter to continue" && read enter
menu3 ;;
2)killbot && msg -ne "Enter to continue" && read enter
menu3 ;;
esac
}

