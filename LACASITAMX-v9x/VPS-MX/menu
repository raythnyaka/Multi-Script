reiniciar_vps () {
echo -ne " \033[1;31m[ ! ] Sudo Reboot"
sleep 3s
echo -e "\033[1;32m [OK]"
(
sudo reboot
) > /dev/null 2>&1
msg -bar
return
}

host_name () {
unset name
while [[ ${name} = "" ]]; do
echo -ne "\033[1;37m $(fun_trans "new hostname"): " && read name
tput cuu1 && tput dl1
done
hostnamectl set-hostname $name 
if [ $(hostnamectl status | head -1  | awk '{print $3}') = "${name}" ]; then 
echo -e "\033[1;33m $(fun_trans "Host changed correctly")!, $(fun_trans "restart VPS")"
else
echo -e "\033[1;33m $(fun_trans "Unmodified host")!"
fi
msg -bar
return
}

cambiopass () {
echo -e "${cor[3]} $(fun_trans "This tool changes the password of your vps server")"
echo -e "${cor[3]} $(fun_trans "This password is used as user") root"
msg -bar
echo -ne " $(fun_trans "Do you want to continue?") [S/N]: "; read x
[[ $x = @(n|N) ]] && msg -bar && return
msg -bar
#Inicia Procedimentos
echo -e "${cor[0]} $(fun_trans "Type your new password")"
msg -bar
read  -p " new password: " pass
(echo $pass; echo $pass)|passwd 2>/dev/null
sleep 1s
msg -bar
echo -e "${cor[3]} $(fun_trans "Password changed successfully!")"
echo -e "${cor[2]} $(fun_trans "Your password is now"): ${cor[4]}$pass"
msg -bar
return
}
