NOTIFY () {
clear
clear
msg -tit

msg -ama " Notify-BOT (Remote Notification)|@LaCasitaMx_Noty_Bot "
msg -bar
echo -e "\033[1;94m Notify-BOT is a simple notifier of:"
echo -e "\033[1;94m >> Expired User"
echo -e "\033[1;94m >> User Deleted"
echo -e "\033[1;94m >> Restarted VPS Warnings"
echo -e "\033[1;94m >> Protocol Monitor Notices"
echo -e "\033[1;97m Start The Telegram BOT"
echo -e "\033[1;92m ¡¡ To get their ID between to the BOT @conectedmx_bot"
echo -e "\033[1;92m Something similar will appear 👤 → Your ID is: 45145564  "
msg -bar
echo -e "\033[1;93mEnter a name for the VPS:\033[0;37m"; read -p " " nombr
echo "${nombr}" > /etc/VPS-MX/controlador/nombre.log
echo -e "\033[1;93mGames are ID 👤:\033[0;37m"; read -p " " idbot
echo "${idbot}" > /etc/VPS-MX/controlador/IDT.log 
msg -bar
echo -e "\033[1;32m              ID ADDED SUCCESSFULLY"
msg -bar
wget -qO- ifconfig.me > /etc/VPS-MX/IP.log
ipt=`less /etc/VPS-MX/IP.log` > /dev/null 2>&1
Nip="$(echo $ipt)"
NOM="$(less /etc/VPS-MX/controlador/nombre.log)"
NOM1="$(echo $NOM)"
IDB1=`less /etc/VPS-MX/controlador/IDT.log` > /dev/null 2>&1
IDB2=`echo $IDB1` > /dev/null 2>&1
KEY="2012880601:AAEJ3Kk18PGDzW57LpTMnVMn_pQYQKW3V9w"
URL="https://api.telegram.org/bot$KEY/sendMessage"
MSG="⚠️ ►► VPS WARNING: $NOM1 ⚠
👉 ►► IP: $Nip
👉 ►► User: $(cat /etc/VPS-MX/message.txt)
👉 ►► TEST MESSAGE
🔰 ►► NOTI-BOT ACTIVATED SUCCESSFULLY"
curl -s --max-time 10 -d "chat_id=$IDB2&disable_web_page_preview=1&text=$MSG" $URL &>/dev/null
echo -e "\033[1;34m            TEST MESSAGE SENT "
touch /etc/noty
}

